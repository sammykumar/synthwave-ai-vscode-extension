{
  "name": "synthwave-dark-vscode",
  "displayName": "SynthWave Dark",
  "description": "A Dark Synthwave/Monokai inspired colour theme to satisfy your neon dreams",
  "version": "0.6.1",
  "author": "Sammy Kumar",
  "publisher": "SammyKumar",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sammykumar/synthwave-dark-vscode"
  },
  "engines": {
    "vscode": "^1.33.0"
  },
  "extensionKind": [
    "ui"
  ],
  "keywords": [
    "retro",
    "80s",
    "monokai",
    "neon",
    "synthwave",
    "dark",
    "theme"
  ],
  "categories": [
    "Themes"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "SynthWave Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/synthwave-color-theme.json"
      }
    ],
    "commands": [
      {
        "command": "synthwaveDark.enableNeon",
        "title": "Synthwave Dark: Enable Neon Dreams"
      },
      {
        "command": "synthwaveDark.disableNeon",
        "title": "Synthwave Dark: Disable Neon Dreams"
      }
    ],
    "configuration": {
      "title": "Synthwave Dark",
      "properties": {
        "synthwaveDark.brightness": {
          "type": "number",
          "default": 1,
          "description": "Set the brightness value for the glow effect. 0.0 is fully transparent and 1.0 is fully bright"
        }
      }
    }
  },
  "dependencies": {
    "semver": "^7.7.1"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.2.2",
    "@vscode/test-electron": "^2.4.1",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.33.0",
    "glob": "^10.3.10",
    "mocha": "^10.8.2",
    "sinon": "^19.0.2",
    "typescript": "^5.7.2"
  },

  "scripts": {
    "version:major": "npm version major",
    "version:minor": "npm version minor", 
    "version:patch": "npm version patch",
    "clean": "rm -f *.vsix && rm -rf .vscode-test-*",
    
    "package": "npx vsce package",
    "build": "npm run version:patch && npm run package",
    
    "test": "node ./src/test/runTest.js",
    "test:watch": "npm run test -- --watch",
    
    "dev:start": "node scripts/dev-start.js",
    "dev:test": "node scripts/dev-test.js",
    "dev:clean": "node scripts/dev-clean.js"
  }
}
