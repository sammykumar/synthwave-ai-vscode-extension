{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch Theme Changes",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/dev-mode.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Dev Mode - Start Hot Reload",
      "type": "shell",
      "command": "echo",
      "args": [
        "ðŸ”¥ Hot Reload Development Mode Started! Make changes to your theme files and they will auto-reload."
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "dependsOrder": "sequence",
      "dependsOn": ["Launch Dev VS Code with Extension", "Watch Theme Changes"]
    },
    {
      "label": "Launch Dev VS Code with Extension",
      "type": "shell",
      "command": "/Users/samkumar/Development/DevTools/DEV-VisualStudioCode.app/Contents/Resources/app/bin/code",
      "args": [
        "--user-data-dir='/Users/samkumar/Development/DevTools/.dev-vscode-data'",
        "--extensions-dir='/Users/samkumar/Development/DevTools/.dev-vscode-extensions'",
        "--extensionDevelopmentPath='/Users/samkumar/Development/SK-Productions-LLC/vscode-extensions/sample-color-theme'"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Reload Extension Window",
      "type": "shell",
      "command": "osascript",
      "args": [
        "-e",
        "tell application \"DEV-VisualStudioCode\" to activate",
        "-e",
        "tell application \"System Events\" to keystroke \"r\" using {command down}"
      ],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
